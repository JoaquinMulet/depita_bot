{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "startCommand": "sleep infinity",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "cron": [
      {
        "schedule": "0 12 * * *", 
        "command": "python scraper.py && python analyzer.py"
      },
      {
        "schedule": "0 14 * * *", 
        "command": "python monitor.py"
      }
    ]
  }